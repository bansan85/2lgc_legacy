echo '-- clean_config --'
./clean_config

echo '-- autoscan --'
autoscan

echo '-- patch < diff-configure.scan.patch --'
patch < diff-configure.scan.patch
echo '-- mv configure.scan configure.ac --'
mv configure.scan configure.ac

echo '-- gettextize -c -f --no-changelog --'
gettextize -c -f --no-changelog
echo '-- mv po/Makevars.template po/Makevars --'
mv po/Makevars.template po/Makevars
echo '-- rm -f po/POTFILES.in --'
rm -f po/POTFILES.in
echo '-- find . -name "*.c" > po/POTFILES.in --'
find . -name "*.c" > po/POTFILES.in

echo '-- autoheader --'
autoheader
echo '-- aclocal --'
aclocal
echo '-- libtoolize --'
libtoolize
echo '-- automake --add-missing --copy --'
automake --add-missing --copy
echo '-- autoconf --'
autoconf

echo '-- ./configure --'
./configure

echo '-- make -j3 --'
make -j3

